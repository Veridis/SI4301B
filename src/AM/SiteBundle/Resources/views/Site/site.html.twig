{% extends 'AMSiteBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} HomePage
{% endblock %}

{% block body %}
    {% include ':user:navbar.html.twig' %}
    <div class="container">
        <div class="header">
            <h3 class="text-muted">AtoMusic</h3>
        </div>

        <div class="jumbotron">
            <h1>AtoMusic</h1>
            <p class="lead">Introduce your music to the world.</p>
            {% if not app.user is not null %}
                <p><a class="btn btn-lg btn-success" href="{{ path('user_new') }}">Register</a><a class="btn btn-lg btn-success" href="{{ path('user_login') }}">Sign in</a></p>
            {% endif %}
        </div>
        <img src="{{ asset('uploads/default_cover.jpg') }}" class="cover-size" />
    </div>
{% endblock %}
