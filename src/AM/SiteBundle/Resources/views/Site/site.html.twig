{% extends 'AMSiteBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} HomePage
{% endblock %}

{% block body %}
    {% if app.user %}
        {% include ':user:navbar.html.twig' %}
    {% endif %}
    <div class="container">
        <div class="header">
            <ul class="nav nav-pills pull-right">
                <li><a href="{{ path('site_home') }}">Home</a></li>
                {% if not app.user %}
                <li><a href="{{ path('user_new') }}">Register</a></li>
                <li><a href="{{ path('user_login') }}">Sign in</a></li>
                {% else %}
                <li><a href="{{ path('user_show', { 'id' : app.user.id }) }}">{{ app.user.username }}</a></li>
                <li><a href="{{ path('user_logout') }}">logout</a></li>
                {% endif %}
            </ul>
            <h3 class="text-muted">AtoMusic</h3>
        </div>

        <div class="jumbotron">
            <h1>AtoMusic</h1>
            <p class="lead">Introduce your music to the world.</p>
            {% if not app.user %}
                <p><a class="btn btn-lg btn-success" href="{{ path('user_new') }}">Register</a><a class="btn btn-lg btn-success" href="{{ path('user_login') }}">Sign in</a></p>
            {% endif %}
        </div>
    </div>
{% endblock %}
