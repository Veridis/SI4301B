{% extends 'AMUserBundle::layout.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
        <div class="col-md-6 col-md-offset-3">
        <div class="well">
        {% if app.user is null %}
            {% if error %}
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {{ error.message }}
                </div>
            {% endif %}
            <form class ="form-horizontal" action="{{ path('user_login_check') }}" method="post">
                <h2>Please sign in </h2>
                <div class="form-group">
                    <label for="username" class="col-sm-2 control-label">Username</label>
                    <div class="col-md-10">
                        <input class="form-control" placeholder="Username" type="text" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">Password</label>
                    <div class="col-md-10">
                    <input class="form-control" placeholder="Password" type="password" id="password" name="_password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                <input class="btn btn-lg btn-info btn-block" type="submit" value="Connexion" />
                    </div>
                </div>
            </form>
        {% else %}
                <p>You're already connected as {{ app.user.username }}. <a href="{{ path('site_home') }}">Return home</a> </p>
        {% endif %}
        </div>
        </div>
        </div>
    </div>
{% endblock %}

