{% extends 'AMAdminBundle::layout.html.twig' %}
{% block body %}
    <h1>Welcome on {{ entity.username }}'s profile!</h1>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ flashMessage }}
        </div>
    {% endfor %}
    Role(s) :
    {% for role in entity.roles %}
        {{ role }}{% if not loop.last %}, {% endif %}
    {% endfor %}
    <br />
    Enabled : {{ entity.enabled ? 'true' : 'false' }}. <br/>

    {% if app.user.id == entity.id %}
        <a href="{{ path('admin_profile_edit', { 'id': entity.id }) }}">edit my profile</a>
    {% endif %}
{% endblock %}