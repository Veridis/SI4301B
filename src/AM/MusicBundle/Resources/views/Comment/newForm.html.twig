<form action="{{ path('music_show', {'id' : music.id}) }}" method="post">
    {% if form_errors(comment_form.content)|length > 0 %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ form_errors(comment_form.content) }}
        </div>
    {% endif %}
    <span class="col-sm-2 control-label">{{ form_label(comment_form.content) }}</span>
    {{ form_widget(comment_form.content) }}
    <input class="btn btn-lg btn-info btn-block" type="submit" value="Post your comment" />
    {{ form_rest(comment_form) }}
</form>

