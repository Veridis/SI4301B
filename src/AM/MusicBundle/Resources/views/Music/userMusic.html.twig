{% extends 'AMMusicBundle::layout.html.twig' %}

{% block body -%}
    <h1>Music list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Style</th>
            <th>Duration</th>
            <th>Cover</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for music in userMusics %}
            <tr>
                <td><a href="{{ path('music_show', { 'id': music.id }) }}">{{ music.id }}</a></td>
                <td>{{ music.title }}</td>
                <td>{{ music.album }}</td>
                <td>{{ music.style }}</td>
                <td>{{ music.duration }}</td>
                <td><img src="{{ asset('uploads/musics/covers/') }}{{ music.musicFiles.coverPath }}" class="cover-size"/></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('music_show', { 'id': music.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('music_edit', { 'id': music.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('music_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
