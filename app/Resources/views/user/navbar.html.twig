                    </audio>
                </div>
            </form>
            <ul class="nav navbar-nav navbar-right">
                {% if app.user %}
                    <li><a href="{{ path('mymusics') }}">My musics</a></li>
                    <li {% if app.request.attributes.get('_route') == 'user_show' %}class="active"{% endif %}><a href="{{ path('user_show', { 'id' : app.user.id }) }}">{{ app.user.username }}</a></li>
                    <li><a href="{{ path('user_logout') }}">Logout</a></li>
                {% else %}
                    <li {% if app.request.attributes.get('_route') == 'user_login' %}class="active"{% endif %}><a href="{{ path('user_login') }}">Login</a></li>
                    <li {% if app.request.attributes.get('_route') == 'user_new' %}class="active"{% endif %}><a href="{{ path('user_new') }}">Register</a></li>
                {% endif %}
            </ul>
        </div><!-- /.navbar-collapse -->
