<nav class="navbar navbar-inverse" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('site_home') }}"><span class="glyphicon glyphicon-home"></span> Home</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li {% if app.request.attributes.get('_route') == 'musics' %}class="active"{% endif %} ><a href="{{ path('musics') }}">Musics</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <form action="{{ path('music_search') }}" method="post" class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" name="research" class="form-control" placeholder="Artist, Title, ...">
                    </div>
                    <button type="submit" class="btn btn-default">Search</button>
                </form>
                {% if app.user %}
                    <li {% if app.request.attributes.get('_route') == 'mymusics' %}class="active"{% endif %}><a href="{{ path('mymusics') }}">My musics</a></li>
                    <li {% if app.request.attributes.get('_route') == 'user_favs' %}class="active"{% endif %}><a href="{{ path('user_favs') }}">Fav' Musics</a></li>
                    <li {% if app.request.attributes.get('_route') == 'user_show' %}class="active"{% endif %}><a href="{{ path('user_show', { 'id' : app.user.id }) }}">{{ app.user.username }}</a></li>
                    <li><a href="{{ path('user_logout') }}">Logout</a></li>
                {% else %}
                    <li {% if app.request.attributes.get('_route') == 'user_login' %}class="active"{% endif %}><a href="{{ path('user_login') }}">Login</a></li>
                    <li {% if app.request.attributes.get('_route') == 'user_new' %}class="active"{% endif %}><a href="{{ path('user_new') }}">Register</a></li>
                {% endif %}
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
